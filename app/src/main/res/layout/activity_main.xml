<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Game View (moved to top, taking most space) -->
    <com.gfg.NaarPazham.GameView
        android:id="@+id/game_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F8F8F8"
        android:layout_marginBottom="8dp" />

    <!-- Status Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/status_section_background">

        <!-- Current Status -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to play"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/status_text_background"
            android:textColor="#1976D2"
            android:layout_marginBottom="12dp" />

        <!-- Game Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/game_info_background">

            <TextView
                android:id="@+id/game_id_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Local Game Mode"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#666666"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/player_role_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Two players on same device"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#2E7D32" />

        </LinearLayout>

        <!-- LOCAL MODE CONTROLS -->
        <LinearLayout
            android:id="@+id/local_mode_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Local Game Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@drawable/game_info_background">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Player 1"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#F44336" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="4dp"
                        android:background="#F44336" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#757575"
                    android:layout_gravity="center"
                    android:padding="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Player 2"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="4dp"
                        android:background="#2196F3" />

                </LinearLayout>

            </LinearLayout>

            <!-- Local Game Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/start_local_game_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Start Game"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/reset_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Reset"
                    android:textSize="14sp"
                    android:backgroundTint="#757575"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

        <!-- ONLINE MODE CONTROLS -->
        <LinearLayout
            android:id="@+id/online_mode_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Queue Info Panel -->
            <LinearLayout
                android:id="@+id/queue_info_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:background="@drawable/queue_panel_background"
                android:visibility="gone">

                <TextView
                    android:id="@+id/queue_status_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Looking for opponent..."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#FF9800"
                    android:layout_marginBottom="12dp" />

                <ProgressBar
                    android:id="@+id/queue_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginBottom="12dp"
                    android:indeterminate="true"
                    android:progressTint="#FF9800" />

                <TextView
                    android:id="@+id/queue_time_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Searching for 0:30"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#424242"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/queue_position_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Queue position: 1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#424242"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/queue_status_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Searching for opponent..."
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/estimated_wait_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Est. wait: 1:30"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/cancel_queue_button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:text="Cancel"
                    android:textSize="12sp"
                    android:backgroundTint="#F44336"
                    android:textColor="#FFFFFF"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

            </LinearLayout>

            <!-- Legacy Queue Status Text (for backward compatibility) -->
            <TextView
                android:id="@+id/queue_status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not in queue"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#666666"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <!-- Online Game Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/find_match_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Find Match"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/cancel_match_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:text="Cancel"
                    android:textSize="14sp"
                    android:backgroundTint="#F44336"
                    android:textColor="#FFFFFF"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/leave_game_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Leave Game"
                    android:textSize="14sp"
                    android:backgroundTint="#F44336"
                    android:textColor="#FFFFFF"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Mode Selection Section (moved to bottom) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/mode_selection_background"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/current_mode_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Local Mode"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:drawableStart="@drawable/ic_local_play"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/switch_mode_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Switch to Online"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>